generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Collections {
  id            Int      @id @default(autoincrement())
  mal_id        Int
  user_email   String
  anime_title  String
  anime_image  String
  createdAt  DateTime @default(now())

@@unique([mal_id, user_email])
}

model Comments {
  id            Int      @id @default(autoincrement())
  mal_id        Int
  rating        Float
  user_email    String
  anime_title   String
  comment       String
  username      String
  createdAt     DateTime @default(now())
}